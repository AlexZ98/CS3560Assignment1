public class SingleChoiceQuestion implements VotingService{
    private int tCount, fCount;
    private String candidateAnswer1, candidateAnswer2;

    public SingleChoiceQuestion(String candidateAnswer1, String candidateAnswer2){
        this.candidateAnswer1 = candidateAnswer1;
        this.candidateAnswer2 = candidateAnswer2;
    }
    public int gettCount() {
        return tCount;
    }
    public int getfCount() {
        return fCount;
    }

    public void poll(Student student, String studentAnswer) {
        if (!student.getHasAnswered() && studentAnswer.length()==1) {
            System.out.println("Student ID: " + student.getId() + " | Answer: " + studentAnswer);
            if (studentAnswer.equalsIgnoreCase(candidateAnswer1)) {
                tCount++;
            } else if (studentAnswer.equalsIgnoreCase(candidateAnswer2)) {
                fCount++;
            }
            else{
                throw new IllegalArgumentException("Invalid answer submitted");
            }
            student.answered();
        }
    }
    public void getResults(){
        System.out.println("# Responses for True: " + gettCount() + " | # Responses for False: " + getfCount());
    }
}
